.office-container{flex:1;position:relative;padding:0;background:radial-gradient(ellipse at center,var(--bg3) 0%,var(--bg) 100%);overflow:hidden;}
.office-widget{position:absolute;border-radius:8px;overflow:hidden;box-shadow:0 2px 8px var(--shadow);transition:box-shadow 0.2s;}
.office-widget:hover{box-shadow:0 0 20px rgba(240,165,0,0.3);}
.office-widget.dragging{z-index:1000!important;box-shadow:0 8px 32px rgba(240,165,0,0.5);}
.office-img-wrap{width:100%;height:100%;border-radius:8px;overflow:hidden;}
.office-img{width:100%;height:100%;object-fit:cover;}
